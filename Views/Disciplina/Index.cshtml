@model IEnumerable<ProjetoUniversidade.Models.Disciplina>

@{
    ViewBag.Title = "Index";
}

<h2>Disciplina</h2>

<p>
    @Html.ActionLink("Nova Disciplina", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.nomeDisciplina)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.codigoDisciplina)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.numeroAulas)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.periodo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Curso.nomeCurso)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.nomeDisciplina)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.codigoDisciplina)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.numeroAulas)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.periodo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Curso.nomeCurso)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.IdDisciplina }) |
            @Html.ActionLink("Detalhes", "Details", new { id=item.IdDisciplina }) |
            @Html.ActionLink("Excluir", "Delete", new { id=item.IdDisciplina })
        </td>
    </tr>
}

</table>
